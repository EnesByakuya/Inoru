<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/inoru_background_prayer_times_mainpage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <!-- Horizontal layout for spinners -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp">

                    <Spinner
                        android:id="@+id/spinnerCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp" />

                    <Spinner
                        android:id="@+id/spinnerCity"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvFajr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_time_fajr"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvDhuhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_time_dhuhr"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvAsr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_time_asr"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvMaghrib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_time_maghrib"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvIsha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_time_isha"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </FrameLayout>